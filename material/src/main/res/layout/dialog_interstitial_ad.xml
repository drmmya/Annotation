<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Advertisement Label -->
        <TextView
            android:id="@+id/label_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advertisement"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <!-- Close Button Top Right -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Close"
            android:layout_gravity="end"
            card_view:tint="#272626" />



    </LinearLayout>
    <!-- Eye-catching Title -->
    <TextView
        android:layout_below="@+id/title"
        android:id="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰ You Win $100! ðŸŽ‰"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Hype Description -->
    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations! You're our lucky winner. Click below to claim your reward."
        android:textSize="25sp"
        android:textColor="#222222"
        android:gravity="center" />

    <!-- (Optional) Fake Website/URL -->
    <TextView
        android:layout_below="@+id/tv_description"
        android:id="@+id/tv_url"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="secure-rewards.com"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:textColor="#545454"
        android:layout_marginBottom="18dp" />

    <!-- Clickable Button -->
    <Button
        android:id="@+id/btn_claim"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="CLAIM NOW"
        android:layout_alignParentBottom="true"
        android:textAllCaps="true"
        android:backgroundTint="#FF9800"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>
